<% ht = t("types.#{@type}") %>
<% htl = "#{ht}-#{t("#{@type}.label")}" %>

<div class="modal fade" id="modalName"
  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">
          <%= ht %> erstellen
        </h4>
      </div>

      <form class="form-horizontal" method="POST" action="/update/individual">
        <%= token_tag(nil) %>
        <div class="modal-body modal-edit">
          <div class="modal-h4">
            <%= htl %>
          </div>
          <input name="type" type="hidden" value="<%= @type %>">
          <input name="label" class="form-control" placeholder="<%= htl %>">
          <input name="id" type="hidden" value="<%= @id %>">
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary"><%= ht %> erstellen</button>
        </div>
      </form>
    </div>
  </div>
</div>
