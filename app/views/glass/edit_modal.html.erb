<div class="modal fade" id="modalName"
  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"
  data-predicate="<%= @predicate %>" data-individual-id="<%= @individual.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">
          <%= @glass.humanize(@individual, @predicate) %>
        </h4>
      </div>

      <div class="modal-body modal-edit">
        <%# Vorhande anzeigen %>
        <div class="properties">
          <%= @glass.edit @individual, @predicate %>
        </div>

        <%# Neues hinzufügen %>
        <% if @individual.cardinality_of(@predicate) != 1 ||
              (@individual.type_of(@predicate) == :objekt &&
               !@individual.editable?(@predicate)) %>
          <%= @glass.new @individual, @predicate %>
        <% end %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Schließen</button>
      </div>
    </div>
  </div>
</div>
